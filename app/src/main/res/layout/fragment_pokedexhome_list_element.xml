<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewPokemon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/default_descript_pokemon_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/textViewPokemonId"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="@string/id"
        app:layout_constraintStart_toEndOf="@+id/imageViewPokemon"
        app:layout_constraintTop_toTopOf="@+id/imageViewPokemon" />

    <TextView
        android:id="@+id/textViewPokemonName"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:text="@string/default_text_pokemon_name"
        app:layout_constraintStart_toEndOf="@+id/textViewPokemonId"
        app:layout_constraintTop_toTopOf="@+id/textViewPokemonId" />

    <TextView
        android:id="@+id/textViewPokemonTypes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/default_text_types"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewPokemonName"
        app:layout_constraintStart_toEndOf="@+id/imageViewPokemon"
        app:layout_constraintTop_toBottomOf="@+id/textViewPokemonName" />
</androidx.constraintlayout.widget.ConstraintLayout>
